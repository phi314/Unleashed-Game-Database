<!DOCTYPE html>
<html>
<head>
	<title>Gameshop</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="user-scalable=no">
</head>
<body>
	<div class="container-fluid" id="wrapper">
		<div class="row">
			<aside class="col-sm-2 hidden-xs" id="side-left">
				<div id="side-left-top">
					<%= image_tag "iron-stark.jpg", class: "img-responsive show-img" %>
				</div>
				<div class="todo">      
		            <ul>
		              	<%= link_to '/games' do %>
		              <li class="<%= params[:controller] == 'games' ? "todo-done" : '' %>">
		              		<div class="todo-icon fui-play"></div>
			                <div class="todo-content">
			                  <h4 class="todo-name">
			                    Games
			                  </h4>
			                  Times Square
			                </div>
		              </li>
		              <% end %>
		              <%= link_to '/todo' do %>
		              <li class="<%= params[:controller] == 'todo' ? "todo-done" : '' %>">
		              	
		              		<div class="todo-icon fui-gear"></div>
			                <div class="todo-content">
			                  <h4 class="todo-name">
			                    Todo
			                  </h4>
			                  Whishlist
			                </div>
		              </li>
		              <% end %>
		            </ul>
		        </div>
			</aside>
			<aside class="col-sm-offset-2 col-sm-10" id="side-right">
				<!-- Header-->
				<header>
					<nav role="navigation" class="navbar navbar-inverse  ">
			            <div class="navbar-header">
			              <button data-target="#navbar-collapse-01" data-toggle="collapse" class="navbar-toggle" type="button">
			                <span class="sr-only">Toggle navigation</span>
			              </button>
			            </div>
			            <div id="navbar-collapse-01" class="collapse navbar-collapse">			            
			              <ul class="nav navbar-nav navbar-right">           
			                <li><a href="#fakelink">Unleashed Game Database</a></li>
			               </ul>
			            </div><!-- /.navbar-collapse -->
			          </nav>
				</header>

				<!-- main Content-->
				<div id="main-content">
					<%= yield %>
				</div>		

			</aside>
		</div>
	</div>

	<footer id="footer">
					<div class="container">
			            <p class="text-center">Unleashed Coorporation [c] 2014. All Right Reserved.</p>
					</div>
				</footer>
	<script type="text/javascript">
		// Tags Input
		$("#game_genre").tagsInput();

		// Data Table Game
		$('#games-table').dataTable({
		    "bLengthChange": false,
		    "bFilter": true,
		    "bInfo": false,
		    "bAutoWidth": false ,
		    "iDisplayLength": 200
        });

		// Add form_control class to Data Tables
		$('.dataTables_filter input').addClass('form-control');

		
	</script>
</body>
	
</html>
